{
  "$schema": "https://schema.hypermode.com/modus.json",
  "endpoints": {
    "default": {
      "type": "graphql",
      "path": "/graphql",
      "auth": "bearer-token"
    }
  },
  "models": {
    "text-generator": {
      "sourceModel": "gpt-4o-mini",
      "connection": "openai",
      "path": "v1/chat/completions"
    }
  },
  "connections": {
    "dgraph": {
      "type": "dgraph",
      "connString": "dgraph://torc-workshop-graph-amelia.hypermode.host:443?sslmode=verify-ca&bearertoken={{API_KEY}}"
    },
    "openai": {
      "type": "http",
      "baseUrl": "https://api.openai.com/",
      "headers": {
        "Authorization": "Bearer {{API_KEY}}"
      }
    },
   "openlibrary": {
      "type": "http",
      "baseUrl": "https://openlibrary.org/"
    }
  }
}